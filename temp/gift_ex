<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cookie Number Gift</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }
        .container {
            text-align: center;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .number {
            font-size: 2em;
            font-weight: bold;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <p>Gift Number: <span class="number" id="giftNumber">Loading...</span></p>
    </div>

    <script>
        // Function to get a cookie by name
        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
            return null;
        }

        // Function to set a cookie
        function setCookie(name, value, hours) {
            const expires = new Date();
            expires.setTime(expires.getTime() + (hours * 60 * 60 * 1000));
            document.cookie = `${name}=${value}; expires=${expires.toUTCString()}; path=/`;
        }

        // Check if the cookie exists
        let giftNumber = getCookie('number_gift_ex');

        if (!giftNumber) {
            // Generate a random number between 1 and 10000
            giftNumber = Math.floor(Math.random() * 10000) + 1;
            // Set the cookie with an expiry of 24 hours
            setCookie('number_gift_ex', giftNumber, 24);
        }

        // Display the value in the center of the screen
        document.getElementById('giftNumber').textContent = giftNumber;
    </script>
</body>
</html>
